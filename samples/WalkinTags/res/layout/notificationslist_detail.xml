<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical"
	android:paddingLeft="5px"
	android:paddingRight="5px" >
	
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:paddingTop="10px"
	android:background="@drawable/common_place_bg"
	android:paddingBottom="10px"
	>
	<TextView android:id="@+id/times" 
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" 
	android:gravity="center"
	android:layout_marginTop="6px"
	android:textColor="#f27845"
	android:layout_marginRight="20px"
	android:layout_alignParentRight="true"
	android:text="111111111111"
	/>
	<TextView android:id="@+id/TextView_go_arrow" 
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" 
	android:gravity="center"
	android:layout_marginTop="30px"
	android:layout_marginRight="20px"
	android:layout_marginLeft="20px"
	android:layout_alignParentRight="true"
	android:background="@drawable/common_go_arrow"
	/>
	<TextView android:id="@+id/img_new" 
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" 
	android:gravity="center"
	android:layout_marginTop="24px"
	android:textSize="16px"
	android:textColor="@color/white"
	android:text="new"
	android:textStyle="bold"
	android:background="@drawable/me_message"
	android:layout_toLeftOf="@id/TextView_go_arrow"
	/>
	<TextView android:id="@+id/email" 
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" 
	android:gravity="center"
	android:paddingTop="6px"
	android:textColor="#646159"
	android:layout_marginLeft="20px"
	android:textStyle="bold"
	android:text="2222222222"
	android:visibility="gone"
	/>
	<TextView android:id="@+id/neirong" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:textColor="#000000"
	android:textSize="24px"  
	android:layout_marginLeft="20px"
	android:layout_marginRight="50px"
	android:paddingTop="6px"
	android:text="asdfasfasfsa"
	android:layout_below="@id/email"/>
</RelativeLayout>
</LinearLayout>