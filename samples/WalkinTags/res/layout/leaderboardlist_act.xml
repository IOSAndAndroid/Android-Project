<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_colour"

>

<TextView 
    android:id="@+id/TextView_cmd_topbar"
	android:textSize="20dip"  
	android:gravity="center" 
	android:layout_width="fill_parent"  
	android:layout_height="wrap_content"
	android:textColor="@color/status_text"
	android:layout_alignParentTop="true"
	android:background="@drawable/common_topbar"
/>

	<Button 
	android:id="@+id/goback" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:background="@drawable/goback_touch_gb"
	android:layout_marginLeft="20px"
	android:layout_marginTop="8px"
	>
	</Button>
<RelativeLayout  
    android:id="@+id/RelativeLayout_bottom"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="60px"
    android:layout_alignParentTop="true"
    android:gravity="center"
>
<TextView android:id="@+id/Button_top_logo"
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content" 
	android:layout_marginTop="6px"
	android:textColor="@color/green"
	android:textStyle="bold"
	android:textSize="28px"
	android:text="排行榜"
	 />
</RelativeLayout>
<RelativeLayout  
    android:id="@+id/RelativeLayout_bottom"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="60px"
    android:layout_alignParentTop="true"
    android:gravity="center"
    android:paddingLeft="2px"
    android:layout_marginTop="36px"
>
 <Button android:id="@+id/Button_top_arrow"
	android:layout_width="22px"  
	android:layout_height="14px" 
	android:background="@drawable/cmd_arrow"
	 />
</RelativeLayout>
<RelativeLayout  
    android:id="@+id/RelativeLayout_bottom"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="4px"
    android:layout_alignParentBottom="true"
>
</RelativeLayout>

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/TextView_cmd_topbar"
	android:layout_above="@id/RelativeLayout_bottom"
>
<LinearLayout
	android:id="@+id/RelativeLayout_brands"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30px"
    android:layout_marginBottom="30px"
    android:gravity="center"
>
<LinearLayout 
	android:layout_width="fill_parent"
	android:orientation="vertical" android:id="@+id/linearLayout1"
	android:layout_height="wrap_content">

	<LinearLayout 
	android:layout_width="wrap_content"
	android:id="@+id/linearLayout3"
	android:orientation="horizontal"
	android:layout_height="wrap_content" 
	android:background="@drawable/leaderboard_example1"
	>
	<ImageView 
	android:id="@+id/user_ImageView"
	android:layout_width="50px" 
	android:layout_height="50px">
	</ImageView>
	<TextView 
	android:id="@+id/shuiping_TextView"
	android:layout_marginTop="10px"
	android:layout_marginLeft="10px"
	android:layout_marginRight="10px"
	android:textColor="@color/white"
	android:text="总体水平"
	android:layout_width="wrap_content" 
	android:layout_height="88px"
		/>
</LinearLayout>

<LinearLayout android:layout_width="fill_parent"
		android:orientation="horizontal" android:id="@+id/linearLayout2"
		android:layout_height="wrap_content" android:layout_marginLeft="50px"
		android:layout_marginRight="50px">
		<TextView 
			android:text="新手" 
			android:id="@+id/jindu_TextView01"
			android:layout_weight="1" 
			android:layout_width="wrap_content"
			android:textColor="#F15E22"
			android:layout_height="wrap_content">
		</TextView>
		<TextView 
			android:text="进阶"
			android:id="@+id/jindu_TextView02"
			android:layout_weight="1"
			android:layout_width="wrap_content"
			android:textColor="#F15E22"
			android:layout_height="wrap_content">
		</TextView>
		<TextView 
			android:text="高级" 
			android:id="@+id/jindu_TextView03"
			android:layout_weight="1" 
			android:layout_width="wrap_content"
			android:textColor="#F15E22"
			android:layout_height="wrap_content">
		</TextView>
		<TextView 
			android:text="老手" 
			android:id="@+id/jindu_TextView04"
			android:layout_weight="1" 
			android:layout_width="wrap_content"
			android:textColor="#F15E22"
			android:layout_height="wrap_content">
		</TextView>
		<TextView 
			android:text="冠军" 
			android:id="@+id/jindu_TextView05"
			android:layout_weight="1" 
			android:gravity="right"
			android:textColor="#F15E22"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
		</TextView>
	</LinearLayout>
		<SeekBar 
			android:id="@+id/SeekBar01" 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" 
			android:progress="5"
			android:layout_marginLeft="70px" 
			android:layout_marginRight="70px"
			android:progressDrawable="@layout/seekbar_style" 
			style="?android:attr/progressBarStyleHorizontal"
			android:thumb="@layout/seekbar_thumb" 
			android:layout_weight="1" />
	</LinearLayout>
</LinearLayout>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/LinearLayout_brands"
    android:background="@drawable/leaderboard_button01" 
    android:layout_below="@+id/RelativeLayout_brands">
<LinearLayout
    android:layout_width="200px"
    android:layout_height="wrap_content"
    android:gravity="center"
>
   <Button 
	android:id="@+id/Button_ALL" 
	android:layout_margin="10px"
	android:layout_width="wrap_content"
	android:gravity="center"
	android:layout_height="wrap_content" 
	android:text="总体"
	android:textSize="28px"
	android:background="@drawable/leaderboard_button02"
	android:textStyle="bold"
	android:textColor="#A83092"
	/>
	</LinearLayout>
	<LinearLayout
    android:layout_width="200px"
    android:layout_height="wrap_content"
    android:gravity="center"
	>
	<Button 
 	android:id="@+id/Button_week" 
	android:layout_margin="10px"
	android:layout_width="wrap_content" 
	android:gravity="center"
	android:layout_height="wrap_content" 
	android:textSize="28px"
	android:textStyle="bold"
	android:background="@drawable/leaderboard_button02"
	android:text="本周"
	android:textColor="#F15E22"
	/>
	</LinearLayout>	
</LinearLayout>

<LinearLayout
	android:id="@+id/LinearLayout_brands_place"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="10px"
    android:layout_below="@+id/LinearLayout_brands"
>
<LinearLayout
	android:id="@+id/LinearLayout_Loading"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
>
<ProgressBar 
	android:id="@+id/progressBar_Loading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    style="@android:style/Widget.ProgressBar.Small.Inverse"
    android:layout_gravity="center_vertical">
</ProgressBar>
<TextView 
    android:id="@+id/TextView_Loading"
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content"
	android:text="loading..."
	android:textColor="@color/black"
/>
</LinearLayout>
<ListView 
	android:paddingTop="1px"
	android:id="@id/android:list" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:drawSelectorOnTop="false"
	android:cacheColorHint="#00000000"
	android:scrollbars="none" 
	android:divider="#ffffff"
	android:listSelector="#00000000"
	/>
</LinearLayout>

</RelativeLayout>
</RelativeLayout>