<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  	android:background="@drawable/bg_colour"
>
<TextView 
    android:id="@+id/TextView_cmd_topbar"
	android:gravity="center" 
	android:layout_width="fill_parent"  
	android:layout_height="wrap_content"
	android:textColor="@color/status_text"
	android:layout_alignParentTop="true"
	android:background="@drawable/common_topbar"
/>
	<Button 
	android:id="@+id/goback" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:background="@drawable/goback_touch_gb"
	android:layout_marginLeft="20px"
	android:layout_marginTop="8px"
	>
	</Button>
<RelativeLayout  
    android:id="@+id/RelativeLayout_bottom"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="60px"
    android:layout_alignParentTop="true"
    android:gravity="center"
>
 <Button android:id="@+id/Button_top_logo"
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content" 
	android:layout_marginTop="6px"
	android:textColor="#000000"
	android:textStyle="bold"
	android:background="@drawable/common_walkin_logo"
	 />
</RelativeLayout>
<RelativeLayout  
    android:id="@+id/RelativeLayout_bottom"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="60px"
    android:layout_alignParentTop="true"
    android:gravity="center"
    android:paddingLeft="2px"
    android:layout_marginTop="36px"
>
 <Button android:id="@+id/Button_top_arrow"
	android:layout_width="22px"  
	android:layout_height="14px" 
	android:background="@drawable/cmd_arrow"
	 />
</RelativeLayout>
<RelativeLayout  
    android:id="@+id/RelativeLayout_bottom"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="0px"
    android:layout_alignParentBottom="true"
>
</RelativeLayout>

<LinearLayout
	android:id="@+id/LinearLayout_list"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center|top"
    android:layout_below="@id/TextView_cmd_topbar"
    android:layout_above="@id/RelativeLayout_bottom"
    android:background="@drawable/badge_bg"
    android:layout_marginLeft="10px"
    android:layout_marginRight="10px"
>

	<ImageView android:id="@+id/nails" 
	android:layout_width="wrap_content"
	android:layout_marginTop="38px"	
    android:layout_height="wrap_content" 
 	android:layout_gravity="center"
	android:adjustViewBounds="true"
	android:background="@drawable/notification_badge_nail"
	/>
	<ImageView android:id="@+id/imageview_badges_img" 
	android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
 	android:layout_gravity="center"
	android:layout_marginTop="18px"	
	android:background="@drawable/badge_back_full"
	android:layout_below="@id/nails"
		 />
	<TextView android:id="@+id/textview_badg" 
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" 
	android:layout_gravity="center" 
	android:textColor="#979389"
	android:textSize="22px"  
	android:textStyle="bold"
	android:layout_marginTop="18px"	
	android:layout_marginBottom="14px"	
	android:text="adidas first checkin"
	android:layout_below="@id/imageview_badges_img"
	/>
	
	<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
>
	<TextView android:id="@+id/textview_description" 
	android:layout_width="wrap_content"
	android:textColor="#979389"
	android:textSize="26px"  
	android:text="88asdfasdfsadfasdfasdfsafdsadfsdfsadfasdf"
	android:layout_marginLeft="20px"
	android:layout_marginRight="20px"
	android:layout_height="wrap_content"/>

</LinearLayout>
<ImageView 
	android:layout_marginTop="40px"
	android:gravity="center" 
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content"
	android:background="@drawable/invite_flower"
/>
<TextView
	android:layout_marginTop="40px"
	android:gravity="center" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:text="@string/TextView_badgesdetail_jieshao01"
	android:textSize="20px"
	android:textColor="#000000"
	android:id="@+id/textview_neirong"
/>


</LinearLayout>
	
</RelativeLayout>