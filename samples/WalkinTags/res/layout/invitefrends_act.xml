<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_colour"
>
<TextView 
    android:id="@+id/TextView_cmd_topbar"
	android:textSize="20dip"  
	android:gravity="center" 
	android:layout_width="fill_parent"  
	android:layout_height="wrap_content"
	android:textColor="@color/status_text"
	android:layout_alignParentTop="true"
	android:background="@drawable/common_topbar"
/>

<RelativeLayout  
    android:id="@+id/RelativeLayout_bottom"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="60px"
    android:layout_alignParentTop="true"
    android:gravity="center"
>
 <Button android:id="@+id/Button_top_logo"
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content" 
	android:layout_marginTop="6px"
	android:textColor="#000000"
	android:textStyle="bold"
	android:background="@drawable/common_walkin_logo"
	 />
</RelativeLayout>
<RelativeLayout  
    android:id="@+id/RelativeLayout_bottom"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="60px"
    android:layout_alignParentTop="true"
    android:gravity="center"
    android:paddingLeft="2px"
    android:layout_marginTop="36px"
>
 <Button android:id="@+id/Button_top_arrow"
	android:layout_width="22px"  
	android:layout_height="14px" 
	android:background="@drawable/cmd_arrow"
	 />
</RelativeLayout>
<RelativeLayout  
    android:id="@+id/RelativeLayout_bottom"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="0px"
    android:layout_alignParentBottom="true"
>
</RelativeLayout>

<LinearLayout
	android:id="@+id/LinearLayout_list"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@id/TextView_cmd_topbar"
    android:layout_above="@id/RelativeLayout_bottom"
   	android:gravity="center|top" 
   	android:background="@drawable/invite_bg"
>
<RelativeLayout  
    android:layout_width="fill_parent"
    android:layout_height="70px"
    android:layout_marginTop="86px"
    android:layout_marginRight="34px"
    android:layout_marginLeft="34px"
    android:background="@drawable/invite_gray"
   	android:gravity="center" 
>
<TextView 
    android:id="@+id/TextView_code"
	android:textSize="30px"  
	android:layout_width="wrap_content"  
	android:layout_height="70px"
	android:gravity="center" 
	android:textColor="@color/white"
	android:text="MASWNGO"
/>
<ImageView 
    android:id="@+id/ImageView_question"
	android:layout_width="wrap_content"  
	android:layout_height="70px"
	android:layout_marginLeft="30px"
	android:src="@drawable/invite_question"
	android:layout_toRightOf="@+id/TextView_code"
/>
</RelativeLayout>
<Button 
	android:layout_marginTop="30px"
    android:id="@+id/Button_email_send"
	android:textSize="20dip"  
	android:gravity="center" 
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content"
	android:textColor="#95a538"
	android:text="Email 邀请"
	android:background="@drawable/common_me_buttom1"
/>
<Button 
	android:layout_marginTop="20px"
    android:id="@+id/Button_sms_send"
	android:textSize="20dip"  
	android:gravity="center" 
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content"
	android:textColor="#95a538"
	android:text="SMS 邀请"
	android:background="@drawable/common_me_buttom1"
/>
<Button 
	android:layout_marginTop="20px"
    android:id="@+id/Button_weibo_send"
	android:gravity="center" 
		android:textSize="20dip"  
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content"
	android:textColor="#95a538"
	android:text="weibo 邀请"
	android:background="@drawable/common_me_buttom1"
/>
<ImageView 
	android:layout_marginTop="40px"
	android:gravity="center" 
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content"
	android:background="@drawable/invite_flower"
/>
<TextView 
	android:textSize="20px" 
	android:layout_marginTop="40px" 
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content"
	android:gravity="center" 
	android:textColor="@color/grey"
	android:text="邀请好友加入，双方都会获得额外IN币奖励"
/>
<TextView 
	android:textSize="26px"  
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content"
	android:gravity="center" 
	android:textColor="@color/grey"
	android:text="2)asdfasdfasdfasdfasdfasdfsadf"
	android:visibility="gone"
/>
<TextView 
	android:textSize="26px"  
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content"
	android:gravity="center" 
	android:textColor="@color/grey"
	android:text="3)asdfasdfasdfasdfasdfasdfsadf"
	android:visibility="gone"
/>
<TextView 
	android:textSize="26px"  
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content"
	android:gravity="center" 
	android:textColor="@color/grey"
	android:text="4)asdfasdfasdfasdfasdfasdfsadf"
	android:visibility="gone"
/>
</LinearLayout>
</RelativeLayout>