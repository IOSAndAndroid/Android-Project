<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_colour"
>

<TextView 
    android:id="@+id/TextView_cmd_topbar"
	android:textSize="20dip"  
	android:gravity="center" 
	android:layout_width="fill_parent"  
	android:layout_height="wrap_content"
	android:textColor="@color/status_text"
	android:layout_alignParentTop="true"
	android:background="@drawable/common_topbar"
/>
	<Button 
	android:layout_alignParentRight="true" 
	android:layout_marginRight="3px"
	android:layout_marginTop="6px"
	android:textSize="18px"
	android:text="0"
	android:gravity="right"
	android:paddingLeft="2px"
	android:paddingTop="8px"
	android:textColor="#A83092"
	android:textStyle="bold"
	android:id="@+id/Button_ME" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	>
	</Button>
	<Button 
	android:id="@+id/goback" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:background="@drawable/goback_touch_gb"
	android:layout_marginLeft="20px"
	android:layout_marginTop="8px"
	>
	</Button>
<RelativeLayout  
    android:id="@+id/RelativeLayout_bottom"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="60px"
    android:layout_alignParentTop="true"
    android:gravity="center"
>
 <Button android:id="@+id/Button_top_logo"
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content" 
	android:layout_marginTop="6px"
	android:textColor="#000000"
	android:textStyle="bold"
	android:background="@drawable/common_walkin_logo"
	 />
</RelativeLayout>
<RelativeLayout  
    android:id="@+id/RelativeLayout_bottom"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="60px"
    android:layout_alignParentTop="true"
    android:gravity="center"
    android:paddingLeft="2px"
    android:layout_marginTop="36px"
>
 <Button 
 	android:id="@+id/Button_top_arrow"
	android:layout_width="22px"  
	android:layout_height="14px" 
	android:background="@drawable/cmd_arrow"
	 />
</RelativeLayout>
<RelativeLayout  
    android:id="@+id/RelativeLayout_bottom"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="0px"
    android:layout_alignParentBottom="true"
>
</RelativeLayout>
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/TextView_cmd_topbar"
	android:layout_above="@id/RelativeLayout_bottom"
>
<RelativeLayout
	android:id="@+id/RelativeLayout_brands"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10px"
>
<ImageView 
 	android:id="@+id/ImageView_brands_logo" 
	android:layout_width="200px" 
	android:layout_height="230px" 
	android:layout_marginLeft="10px"
	/>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
   	android:layout_toRightOf="@+id/ImageView_brands_logo"
   	android:gravity="center"
	android:id="@+id/LinearLayout_brands" 
>
 <TextView 
	android:id="@+id/TextView_brands" 
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="test"
	android:textColor="#676766"
	android:textSize="30px"
	android:textStyle="bold"
 /> 
  </LinearLayout>
	 <TextView 
	android:id="@+id/TextView_brands_neirong" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:textSize="22px"
	android:text="您需要到如下adidas店,手机扫描右边的图标进店签到，赢得积分，优惠玩店内游戏赢得更多惊喜.您需要到如下adidas店,手机扫描右边的图标进店签到，赢得积分，优惠玩店内游戏赢得更多惊喜."
	android:paddingLeft="4px"
	android:paddingRight="20px"
	android:layout_marginTop="8px"
	android:maxLines="6"
	android:layout_toRightOf="@+id/ImageView_brands_logo"
	android:layout_below="@+id/LinearLayout_brands"
 /> 
 <!--<Button android:text="创建分类" android:id="@+id/startService" 
android:layout_width="fill_parent" android:layout_height="wrap_content"></Button>
<Button android:text="显示其他"  android:id="@+id/stopService" 
android:layout_width="fill_parent" android:layout_height="wrap_content"></Button> -->
</RelativeLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2px"
    android:layout_below="@+id/RelativeLayout_brands"
    android:id="@+id/LinearLayout_top_lines"
    android:background="@drawable/common_top_lines"
    android:layout_marginLeft="10px"
    android:layout_marginRight="10px"
>
</LinearLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_below="@+id/LinearLayout_top_lines"
    android:id="@+id/LinearLayout_brands"
>
<LinearLayout
    android:layout_width="200px"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/LinearLayout_inbi"
>
   <TextView 
	android:id="@+id/TextView_inbi" 
	android:layout_width="wrap_content"
	android:gravity="center"
	android:layout_height="wrap_content" 
	android:paddingLeft="20px"
	android:textSize="40px"
	android:text="35"
	android:textStyle="bold"
	android:textColor="#A83092"
	/>
   <ImageView 
	android:id="@+id/ImageView_inbi" 
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" 
	android:background="@drawable/common_place_inbi"
	android:layout_marginRight="10px"
	/>
	</LinearLayout>
   <TextView 
	android:id="@+id/calum" 
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" 
	android:background="@drawable/common_calum"
	/>
<LinearLayout
    android:layout_width="200px"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/LinearLayout_youhui"
>
	<TextView 
 	android:id="@+id/TextView_youhui" 
	android:layout_width="wrap_content" 
	android:gravity="center"
	android:layout_height="wrap_content" 
	android:textSize="40px"
	android:textStyle="bold"
	android:text="3+"
	android:textColor="#F15E22"
	/>
<ImageView 
 	android:id="@+id/ImageView_youhui" 
	android:layout_width="wrap_content" 
	android:gravity="center"
	android:layout_height="wrap_content" 
    android:background="@drawable/common_place_deals"
    android:layout_marginRight="10px"
	/>
	</LinearLayout>
</LinearLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/LinearLayout_brands"
    android:id="@+id/me_LinearLayout_03"
    android:background="@drawable/common_top_lines"
    android:layout_marginLeft="10px"
    android:layout_marginRight="10px"
>
</LinearLayout>
<LinearLayout
	android:id="@+id/LinearLayout_brands_place"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@+id/me_LinearLayout_03"
>
<ListView 
	android:paddingTop="1px"
	android:id="@id/android:list" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:drawSelectorOnTop="false"
	android:cacheColorHint="#00000000"
	android:scrollbars="none" 
	android:divider="#ffffff"
	android:listSelector="#00000000"
	/>
</LinearLayout>
</RelativeLayout>
</RelativeLayout>