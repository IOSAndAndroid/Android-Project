<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_colour"
>
<ScrollView 
	android:id="@+id/ScrollView_gun"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:scrollbars="vertical"
>
<LinearLayout
	android:id="@+id/LinearLayout_List"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" 
>
 <ImageView android:id="@+id/ImageView_Logo"
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content" 
	android:background="@drawable/login_registration_big_logo"
	android:layout_marginBottom="20px"
	android:layout_marginTop="70px"
	 />
 <TextView android:id="@+id/TextView_Description"
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content" 
	android:textColor="#be65ac"
	android:textStyle="bold"
	android:gravity="center"
	android:text="@string/TextView_Description"
	 />
	 
	 <Button android:id="@+id/Button_Registration"
	android:layout_width="fill_parent"  
	android:layout_height="65px" 
	android:textColor="#e95b21"
	android:textStyle="bold"
	android:textSize="30px"
	android:layout_marginLeft="10px"
	android:layout_marginRight="10px"
	android:layout_marginTop="30px"
	android:layout_marginBottom="50px"
	android:background="@drawable/new_user_button_android"
	 />
<TableLayout
	android:id="@+id/TableLayout_List"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1"
   
> 
<TableRow >
 <EditText android:id="@+id/EditText_Email"
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content" 
	android:textColor="#838383"
	android:textStyle="bold"
	android:hint="邮箱"
	android:paddingLeft="30px"
	android:layout_marginLeft="10px"
	android:layout_marginRight="10px"
	android:layout_column="1"
android:lines="1" android:maxLines="1" android:singleLine="true"
	
	 />
 <ImageView android:id="@+id/ImageView_Email"
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content" 
	android:textColor="#000000"
	android:background="@drawable/common_error"
	android:visibility="gone"
	android:layout_marginTop="20px"
	android:layout_marginRight="10px"
	 />
	 </TableRow>
	 <TableRow>
 <EditText android:id="@+id/EditText_Password"
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content" 
	android:textColor="#838383"
	android:hint="账户密码"
	android:paddingLeft="30px"
	android:layout_marginLeft="10px"
	android:layout_marginRight="10px"
	android:layout_column="1"
	android:password="true"
android:lines="1" android:maxLines="1" android:singleLine="true"
	 />
 <ImageView android:id="@+id/ImageView_Password"
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content" 
	android:textColor="#000000"
	android:background="@drawable/common_error"
	android:visibility="gone"
	android:layout_marginTop="20px"
	android:layout_marginRight="10px"
	 />
	 </TableRow>
</TableLayout>	 

	<LinearLayout
	android:id="@+id/LinearLayout_List"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:orientation="vertical"
	android:gravity="center"
> 

 <TextView android:id="@+id/TextView_Forgotpassword"
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content" 
	android:textColor="#bfb8a9"
	android:textSize="25px"
	android:textStyle="bold"
	android:text="忘记密码了?"
	android:layout_marginTop="10px"
	android:layout_marginBottom="10px"
	 />
  <Button android:id="@+id/Button_Login"
	android:layout_width="300px"  
	android:layout_height="wrap_content" 
	android:textColor="#a83092"
	android:textStyle="bold"
	android:text="用户登陆"
	android:textSize="30px"
	android:layout_marginBottom="10px"
	android:background="@drawable/common_me_buttom1"
	 />
<LinearLayout
	android:id="@+id/LinearLayout_liyou"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:gravity="center"
>
 <TextView android:id="@+id/TextView_liyou"
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content" 
	android:textColor="#bfb8a9"
	android:textSize="25px"
	android:text="给我一个walkin的理由?"
	 />
	 <ImageView android:id="@+id/ImageView_Promo_Code_Icon"
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content" 
	android:layout_marginLeft="20px"
	android:background="@drawable/invite_question"
	 />
</LinearLayout>
</LinearLayout>



</LinearLayout>
</ScrollView>
</RelativeLayout>