<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     android:background="@drawable/bg_colour"
>
<TextView 
    android:id="@+id/TextView_cmd_topbar"
	android:textSize="20dip"  
	android:gravity="center" 
	android:layout_width="fill_parent"  
	android:layout_height="wrap_content"
	android:layout_alignParentTop="true"
	android:background="@drawable/common_topbar_wuarrace"
/>

<RelativeLayout  
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="60px"
    android:layout_alignParentTop="true"
    android:gravity="center"
>
 <Button android:id="@+id/Button_walkin_logo"
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content" 
	android:layout_marginTop="6px"
	android:textColor="#000000"
	android:textStyle="bold"
	android:background="@drawable/common_walkin_logo"
	 />
</RelativeLayout>
<ScrollView 
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_below="@id/TextView_cmd_topbar"
	android:scrollbars="vertical"
	 
>
<LinearLayout
	android:id="@+id/LinearLayout_List"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
>
<LinearLayout
	android:id="@+id/LinearLayout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="40px"
    android:layout_marginLeft="30px"
	android:layout_marginRight="30px"
	android:padding="20px"
	android:background="@drawable/rectangle_corner"
>
<TextView 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:textSize="26px"
	android:textStyle="bold"
	android:gravity="center"
 	android:text="设置用户名"
 	android:paddingLeft="12px"
/>
<TableLayout
	android:id="@+id/TableLayout_List"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1"
> 
<TableRow >
 <EditText android:id="@+id/EditText_UserName"
	android:layout_width="fill_parent"  
	android:layout_height="wrap_content" 
	android:textColor="#838383"
	android:textStyle="bold"
	android:hint="用户名"
	android:maxLines="1"
	android:layout_column="1"
	 />
	 
	  <ImageView android:id="@+id/ImageView_UserName"
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content" 
	android:textColor="#000000"
	android:background="@drawable/common_error"
	android:visibility="gone"
	android:layout_marginTop="20px"
	android:layout_marginRight="10px"
	 />
	  
	 </TableRow>
</TableLayout>
 </LinearLayout>
<RelativeLayout
	android:id="@+id/RelativeLayout_UserImageUpdate"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="40px"
    android:layout_marginLeft="30px"
	android:layout_marginRight="30px"
	android:background="@drawable/rectangle_corner"
	android:padding="20px"
>



 <TextView android:id="@+id/TextView_UserImage"
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content" 
	android:textStyle="bold"
	android:text="设置头像"
	android:textSize="30px"
	android:layout_alignParentLeft="true"
	 />
<LinearLayout
	android:id="@+id/LinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   	android:layout_below="@+id/TextView_UserImage"
   	android:gravity="center"
>
 <ImageView android:id="@+id/ImageView_UserImage"
	android:layout_width="180px"  
	android:layout_height="150px" 
	android:layout_marginTop="10px"
	 />
 <Button android:id="@+id/Button_upload"
	android:layout_width="wrap_content"  
	android:layout_height="wrap_content" 
	android:textColor="#000000"
	android:text="上传"
	 />
</LinearLayout>
</RelativeLayout>
 	<Button android:id="@+id/Button_Next"
	android:layout_width="fill_parent"  
	android:layout_height="wrap_content" 
	android:layout_marginTop="30px"
	android:textColor="#e95b21"
	android:textStyle="bold"
	android:text="确定"
	android:textSize="30px"
	android:layout_marginLeft="10px"
	android:layout_marginRight="10px"
	android:background="@drawable/bigbutton"
	 />
</LinearLayout>
</ScrollView>   
</RelativeLayout>